{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=orderintegration;Username=postgres;Password=postgres"
  },
  "ApiSettings": {
    "ApiKey": "dev-api-key-change-in-production",
    "RunMigrations": true
  },
  "ErpIntegration": {
    "SimulationMode": "Random",
    "SimulatedFailureRate": 0.1,
    "MinLatencyMs": 100,
    "MaxLatencyMs": 500,
    "TimeoutSeconds": 30,
    "ForceFailOrderNumbers": ["FAIL", "ERROR"],
    "ForceSuccessOrderNumbers": ["TEST", "OK"]
  }
}
