# ================================
# Order Integration API - Environment Variables
# ================================
# Copiar este archivo a .env y ajustar valores

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=orderintegration

# Connection String (para la API)
ConnectionStrings__DefaultConnection=Host=db;Port=5432;Database=orderintegration;Username=postgres;Password=postgres123

# API Settings
ApiSettings__ApiKey=dev-api-key-12345
ApiSettings__RunMigrations=true

# ERP Simulation (opcional)
ErpIntegration__SimulationMode=Random
ErpIntegration__SimulatedFailureRate=0.2
ErpIntegration__MinLatencyMs=100
ErpIntegration__MaxLatencyMs=500
